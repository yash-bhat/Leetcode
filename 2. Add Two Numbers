# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: ListNode, l2: ListNode) -> ListNode:
        
        ayyo = ListNode(0)
        l3 = ayyo
        res = 0 
        carry = 0
        
        while(l1 or l2):
            print(l3)
            if carry:
                res = l1.val + l2.val + 1
                carry = 0
            else:
                res = l1.val + l2.val
                
            l3.next = ListNode(res%10)
            l3 = l3.next
            
            print(res%10)
            if res > 9:
                carry = 1
            
            l2 = l2.next
            l1 = l1.next
            
        print('fin',l3)
        if carry:
            l3.next = ListNode()
            l3.val = 1
            return l3
        else:
            return l3
            
            
        
